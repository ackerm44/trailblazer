<div id = "question-show">
  <h5>From: <%= @question.user.username %> on <%= @question.created_at %> </h5>
  <h5>Regarding: <%= link_to @question.trail.name, trail_path(@question.trail) %></h5>
  <h2><%= @question.title %></h2>

  <button id="next-question" data-id="<%= @question.id %>">Next Question</button>

</div>

<h4>Answers</h4>
<div id="answers-show">
  <% @question.answers.each do |answer| %>
    <p>
      From <%= answer.user.username %> on <%= answer.created_at %><br>
      <%= answer.title %>
    </p>
  <% end %>
</div>
