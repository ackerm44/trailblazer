<!DOCTYPE html>
<html>
  <head>
    <title>Trailblazer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <%= link_to_unless_current("Home", { controller: "welcome", action: "index" }) %>
      <%= link_to_unless_current("Trails", { controller: "trails", action: "index" }) %>
      <%= link_to_unless_current("Submit a Trail", { controller: "trails", action: "new" }) %>
      <%= link_to "Logout", destroy_user_session_path, :method => 'delete' %>
    </nav>
    <%= yield %>
  </body>
</html>
